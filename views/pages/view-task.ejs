<%- include('../partials/header.ejs') %>

<div class="content">

    <div class="card-box">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Tasks List</h4>
            <a href="/tasks/add" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add Task
            </a>
        </div>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Task</th>
                        <th>Assigned To</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (data && data.length > 0) { %>
                        <% data.forEach((task, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= task.title %></td>
                                <td><%= task.assignedTo || 'N/A' %></td>
                                <td><span class="badge bg-info"><%= task.priority %></span></td>
                                <td><span class="badge bg-secondary"><%= task.status %></span></td>
                                <td class="text-end">
                                    <a href="/api/update-task/<%= task._id %>" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                    <a href="/api/delete-task/<%= task._id %>" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No tasks found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

    </div>

</div>

<%- include('../partials/footer.ejs') %>